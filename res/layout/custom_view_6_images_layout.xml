<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_marginRight="@dimen/common_space_half"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/img0"
            android:layout_marginBottom="@dimen/common_space_half"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/img1"
            android:layout_marginBottom="@dimen/common_space_half"
            android:layout_marginTop="@dimen/common_space_half"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/img2"
            android:layout_marginTop="@dimen/common_space_half"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/common_space_half"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/img3"
            android:layout_marginBottom="@dimen/common_space_half"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/img4"
            android:layout_marginBottom="@dimen/common_space_half"
            android:layout_marginTop="@dimen/common_space_half"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/common_space_half"
            android:id="@+id/img5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
        </LinearLayout>
</LinearLayout>