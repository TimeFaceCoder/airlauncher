<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rayboot.airlauncher.customviews.CommonImage
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/img1"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/common_space_half"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/common_space_half"
        android:layout_weight="1">

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/img2"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/common_space_half"
            android:layout_weight="1" />

        <com.rayboot.airlauncher.customviews.CommonImage
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_space_half"
            android:id="@+id/img3"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>