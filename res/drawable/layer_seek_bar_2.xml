<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/page_indicator"
                android:centerColor="@color/page_indicator"
                android:endColor="@color/page_indicator" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/main_color"
                    android:centerColor="@color/main_color"
                    android:endColor="@color/main_color" />
            </shape>
        </clip>
    </item>
</layer-list>
